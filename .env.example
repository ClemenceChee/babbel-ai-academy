# AI Academy Environment Configuration
# Copy this file to .env and customize the values for your deployment

# Application Configuration
APP_NAME=AI-Academy
APP_VERSION=2.0.0
NODE_ENV=production
FLASK_ENV=production

# Frontend Configuration
REACT_APP_API_URL=http://localhost:5000
REACT_APP_APP_NAME=AI Academy
REACT_APP_VERSION=2.0.0

# Backend Configuration
FLASK_APP=app.py
FLASK_DEBUG=0
PYTHONPATH=/app

# Database Configuration (if using external database)
# DATABASE_URL=postgresql://user:password@localhost:5432/ai_academy
# REDIS_URL=redis://localhost:6379/0

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Performance Configuration
WORKERS=4
TIMEOUT=30
KEEPALIVE=2

# SSL Configuration (for production with HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Demo Configuration
DEMO_USER_EMAIL=demo@company.com
DEMO_USER_PASSWORD=demo123

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90

# Content Configuration
COURSE_DATA_PATH=/app/src/content
MAX_UPLOAD_SIZE=10485760  # 10MB

# Email Configuration (if using email features)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# FROM_EMAIL=noreply@your-domain.com

# External Services (if integrating with external APIs)
# OPENAI_API_KEY=your-openai-api-key
# STRIPE_SECRET_KEY=your-stripe-secret-key
# STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
